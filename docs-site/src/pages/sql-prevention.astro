---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import en from '../i18n/en.json';

const t = en;
const locale = 'en';
---

<Layout 
  title={t.sqlPrevention.meta.title}
  description={t.sqlPrevention.meta.description}
  locale={locale}
  keywords={t.sqlPrevention.meta.keywords}
>
  <Header t={t} locale={locale} />
  
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-gray-900 via-primary to-gray-800 text-white py-16 sm:py-20 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-4xl mx-auto">
        <div class="inline-block bg-red-500/10 text-red-400 px-4 py-2 rounded-full text-sm font-semibold mb-6 border border-red-500/20">
          {t.sqlPrevention.hero.badge}
        </div>
        
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-extrabold mb-6 leading-tight">
          {t.sqlPrevention.hero.title} <span class="gradient-text">{t.sqlPrevention.hero.titleHighlight}</span>
        </h1>
        
        <p class="text-xl sm:text-2xl text-gray-300 mb-8 leading-relaxed">
          {t.sqlPrevention.hero.subtitle}
        </p>
      </div>
    </div>
  </section>

  <!-- Stats Grid -->
  <section class="py-12 sm:py-16 bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 sm:gap-8">
        {t.sqlPrevention.stats.map((stat: any, index: number) => {
          const gradients = [
            'from-red-500/10 to-red-600/10 border-red-500/20',
            'from-orange-500/10 to-orange-600/10 border-orange-500/20',
            'from-blue-500/10 to-blue-600/10 border-blue-500/20',
            'from-green-500/10 to-green-600/10 border-green-500/20'
          ];
          const textColors = ['text-red-600', 'text-orange-600', 'text-blue-600', 'text-green-600'];
          
          return (
            <div class={`text-center p-6 bg-gradient-to-br ${gradients[index]} rounded-xl border`}>
              <div class={`text-5xl font-bold ${textColors[index]} mb-2`}>{stat.value}</div>
              <div class="text-sm font-semibold text-gray-700">{stat.label}</div>
              <div class="text-xs text-gray-500 mt-1">{stat.description}</div>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Understanding SQL Injection -->
  <section class="py-16 sm:py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl sm:text-4xl font-bold text-primary mb-4">{t.sqlPrevention.threat.title}</h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          {t.sqlPrevention.threat.subtitle}
        </p>
      </div>

      <div class="bg-red-50 border-l-4 border-red-500 p-8 rounded-r-lg mb-12">
        <p class="text-red-900 leading-relaxed">
          {t.sqlPrevention.threat.description}
        </p>
      </div>

      <!-- Attack Examples -->
      <div class="bg-white rounded-xl p-8 shadow-sm">
        <h3 class="text-2xl font-bold text-primary mb-6">{t.sqlPrevention.threat.examples.title}</h3>
        <div class="grid md:grid-cols-3 gap-6">
          {t.sqlPrevention.threat.examples.items.map((example: any) => (
            <div class="border-l-4 border-red-500 pl-6 py-4">
              <h4 class="font-bold text-red-900 mb-2">{example.name}</h4>
              <code class="block bg-red-100 text-red-800 p-2 rounded text-sm mb-2 break-all">
                {example.attack}
              </code>
              <p class="text-sm text-gray-600">{example.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Protection Layers -->
  <section class="py-16 sm:py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl sm:text-4xl font-bold text-primary mb-4">{t.sqlPrevention.protection.title}</h2>
        <p class="text-lg text-gray-600">
          {t.sqlPrevention.protection.subtitle}
        </p>
      </div>

      <div class="space-y-8">
        {t.sqlPrevention.protection.layers.map((layer: any, index: number) => {
          const colors = [
            { border: 'border-blue-500', bg: 'from-blue-50 to-blue-100', text: 'text-blue-900', icon: 'text-blue-600' },
            { border: 'border-green-500', bg: 'from-green-50 to-green-100', text: 'text-green-900', icon: 'text-green-600' },
            { border: 'border-purple-500', bg: 'from-purple-50 to-purple-100', text: 'text-purple-900', icon: 'text-purple-600' },
            { border: 'border-orange-500', bg: 'from-orange-50 to-orange-100', text: 'text-orange-900', icon: 'text-orange-600' }
          ];
          const color = colors[index];
          
          return (
            <div class={`bg-gradient-to-br border-l-4 p-8 rounded-r-lg`}>
              <h3 class={`text-2xl font-bold mb-4`}>{layer.title}</h3>
              <p class={`mb-4`}>{layer.description}</p>
              <ul class="space-y-2">
                {layer.guarantees.map((guarantee: string) => (
                  <li class={`flex items-start`}>
                    <svg class={`w-6 h-6  mr-3 mt-0.5 flex-shrink-0`} fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span>{guarantee}</span>
                  </li>
                ))}
              </ul>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Formal Proofs -->
  <section class="py-16 sm:py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl sm:text-4xl font-bold text-primary mb-4">{t.sqlPrevention.formalProofs.title}</h2>
        <p class="text-lg text-gray-600">
          {t.sqlPrevention.formalProofs.subtitle}
        </p>
      </div>

      <div class="space-y-8">
        {t.sqlPrevention.formalProofs.proofs.map((proof: any) => (
          <div class="bg-white rounded-xl p-8 shadow-sm border border-gray-200">
            <h3 class="text-2xl font-bold text-indigo-900 mb-4">{proof.title}</h3>
            <div class="bg-indigo-50 border-l-4 border-indigo-500 p-4 mb-4">
              <p class="font-mono text-sm text-indigo-900">{proof.statement}</p>
            </div>
            <div class="prose max-w-none mb-4">
              <p class="text-gray-700 whitespace-pre-line">{proof.proof}</p>
            </div>
            <div class="bg-gray-900 rounded-lg overflow-hidden">
              <pre class="p-4 overflow-x-auto text-sm"><code class="language-typescript">{proof.code}</code></pre>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Test Coverage -->
  <section class="py-16 sm:py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl sm:text-4xl font-bold text-primary mb-4">{t.sqlPrevention.testCoverage.title}</h2>
        <p class="text-lg text-gray-600">
          {t.sqlPrevention.testCoverage.subtitle}
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        {t.sqlPrevention.testCoverage.categories.map((category: any, index: number) => {
          const colors = ['bg-blue-50 border-blue-200', 'bg-green-50 border-green-200', 'bg-purple-50 border-purple-200', 'bg-orange-50 border-orange-200', 'bg-red-50 border-red-200'];
          
          return (
            <div class={`${colors[index]} border rounded-lg p-6`}>
              <h3 class="text-xl font-bold text-gray-900 mb-4">{category.title}</h3>
              <ul class="space-y-2">
                {category.tests.map((test: string) => (
                  <li class="flex items-start text-sm">
                    <svg class="w-5 h-5 text-green-600 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="text-gray-700">{test}</span>
                  </li>
                ))}
              </ul>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Code Examples -->
  <section class="py-16 sm:py-20 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl sm:text-4xl font-bold text-primary mb-4">{t.sqlPrevention.codeExamples.title}</h2>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <!-- Unsafe Example -->
        <div>
          <h3 class="text-xl font-bold text-red-600 mb-4">{t.sqlPrevention.codeExamples.unsafe.title}</h3>
          <div class="bg-gray-900 rounded-lg overflow-hidden border-4 border-red-500">
            <pre class="p-4 overflow-x-auto text-sm"><code class="language-typescript">{t.sqlPrevention.codeExamples.unsafe.code}</code></pre>
          </div>
        </div>

        <!-- Safe Example -->
        <div>
          <h3 class="text-xl font-bold text-green-600 mb-4">{t.sqlPrevention.codeExamples.safe.title}</h3>
          <div class="bg-gray-900 rounded-lg overflow-hidden border-4 border-green-500">
            <pre class="p-4 overflow-x-auto text-sm"><code class="language-typescript">{t.sqlPrevention.codeExamples.safe.code}</code></pre>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Implementation Details -->
  <section class="py-16 sm:py-20 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl sm:text-4xl font-bold text-primary mb-4">{t.sqlPrevention.implementation.title}</h2>
      </div>

      <div class="space-y-8">
        {t.sqlPrevention.implementation.sections.map((section: any) => (
          <div class="bg-gray-50 rounded-xl p-8">
            <h3 class="text-2xl font-bold text-gray-900 mb-3">{section.title}</h3>
            <p class="text-gray-700 mb-4">{section.description}</p>
            <div class="bg-gray-900 rounded-lg overflow-hidden">
              <pre class="p-4 overflow-x-auto text-sm"><code class="language-typescript">{section.code}</code></pre>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Best Practices -->
  <section class="py-16 sm:py-20 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl sm:text-4xl font-bold text-primary mb-4">{t.sqlPrevention.bestPractices.title}</h2>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        {t.sqlPrevention.bestPractices.practices.map((practice: any) => (
          <div class="bg-white rounded-lg p-6 shadow-sm">
            <h3 class="text-xl font-bold text-gray-900 mb-3">{practice.title}</h3>
            <p class="text-gray-700 mb-4">{practice.description}</p>
            <div class="space-y-2">
              <div class="flex items-start">
                <svg class="w-6 h-6 text-green-600 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-sm text-gray-700"><strong>Do:</strong> {practice.do}</span>
              </div>
              <div class="flex items-start">
                <svg class="w-6 h-6 text-red-600 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-sm text-gray-700"><strong>Don't:</strong> {practice.dont}</span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 sm:py-20 bg-gradient-to-br from-red-600 to-red-700 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl sm:text-4xl font-bold mb-6">{t.sqlPrevention.cta.title}</h2>
      <p class="text-xl mb-8 text-red-100">
        {t.sqlPrevention.cta.subtitle}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="https://github.com/multipliedtwice/prisma-to-sql/tree/main/tests/sql-injection" class="bg-white text-red-600 hover:bg-gray-100 font-bold py-4 px-8 rounded-lg text-lg transition">
          {t.sqlPrevention.cta.button1}
        </a>
        <a href="https://github.com/multipliedtwice/prisma-to-sql/tree/main/src" class="bg-white/10 hover:bg-white/20 text-white font-bold py-4 px-8 rounded-lg text-lg transition border border-white/30">
          {t.sqlPrevention.cta.button2}
        </a>
      </div>
    </div>
  </section>

  <Footer t={t} locale={locale} />
</Layout>